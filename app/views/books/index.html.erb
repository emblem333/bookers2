<div class="container">
  <div class="row">
      <div class="col-lg-4">
               <!--エラーメッセージ-->
        <%= render "books/error" %>

        <!--プロフィール（部分テンプレート）-->
        <%= render "users/info",user:@user %>

         <!--投稿フォーム（部分テンプレート）-->
        <%= render "books/book",book:@book %>
      </div>

    <div class="col-lg-8">
      <!--見出し-->
      <h1>Books</h1>
      <table class="table">
        <!--テーブルのヘッダー-->
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <!--実データ-->
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <!--ユーザー詳細にリンク-->
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              </td>

              <td>
                <!--ブック詳細にリンク-->
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>

              <td><%= book.body %></td>

            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
