<!--マイページ-->
<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">
      <%= render "users/info",user:@user %><!--プロフィール（部分テンプレート）-->

      <%= render "books/book",book:@book %><!--投稿フォーム（部分テンプレート）-->
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table"><!--テーブルのヘッダー-->
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <!--実データ-->
        <% @books.each do |books| %>
          <tbody>
            <tr>
              <td>
                 <%= link_to user_path(books.user.id) do %>
                  <%= image_tag books.user.get_profile_image(80, 80) %><!--ユーザー画像-->
                <% end %>
              </td>
              <td>
                <%= link_to book_path(books.id) do %><!--タイトルブック詳細にリンク-->
                  <%= books.title %>
                <% end %>
              </td>
              <td>
                <!--詳細-->
                <%= books.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>