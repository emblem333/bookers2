<h1>User info</h1>
  <table class="table">
    <tr>
      <%= image_tag user.get_profile_image(100, 100) %>
    </tr>
    <tbody>
      <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <td>introduction</td>
