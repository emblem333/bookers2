<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">
      <!--エラーメッセージ-->
      <%= render "books/error" %>

      <!--プロフィール（部分テンプレート）-->
      <%= render "users/info",user:@user %>


      <!--投稿フォーム（部分テンプレート）-->
      <%= render "books/book",book:@book %>
    </div>

  <!--ユーザー一覧-->
    <div class="col-md-8 offset-md-1">
      <!--見出し-->
      <h1>Users</h1>
      <table class="table table-resposive">
        <!--テーブルのヘッダー-->
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <!--実データ-->
        <% @users.each do |users| %>
          <tbody>
            <tr>
              <td>
                <!--ユーザー画像-->
            <p><%= image_tag users.get_profile_image(100,100) %></p>
              </td>

              <td>
                <!--ユーザー名-->
                  <%= users.name %>
              </td>

              <td>
                 <%= link_to "Show",user_path(user.id) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>